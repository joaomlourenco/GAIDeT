\NewDocumentCommand \GAIsetCheckmarkSymbol { m }
  {
    \tl_gset:Nn \g__gai_checkmark_symbol_tl { #1 }
    \hbox_set:Nn \l_tmpa_box { \fbox { #1 } }
    \dim_set:Nn \l__gai_boxwd_dim { \box_wd:N \l_tmpa_box }
